[Rule]
# ~ BiliBili_嗶哩嗶哩Defaultword@ddgksf2013
URL-REGEX,https://app.bilibili.com/x/v2/search/defaultwords,REJECT-TINYGIF
# ~ BiliBili_嗶哩嗶哩Material_Ad@ddgksf2013
URL-REGEX,https?:\/\/api\.bilibili\.com\/x\/vip\/ads\/material\/report,REJECT-TINYGIF
# ~ BiliBili_視頻播放時小卡片廣告@ddgksf2013
URL-REGEX,https://api.bilibili.com/pgc/season/player/cards,REJECT-TINYGIF
# ~ BiliBili_應用開屏去廣告
URL-REGEX,https://app.bilibili.com/x/v2/splash/(show|list),REJECT-TINYGIF
# ~ BiliBili_去除搜索中的大家都在搜
URL-REGEX,^https?:\/\/api\.vc\.bilibili\.com\/search_svr\/v\d\/Search\/recommend_words,REJECT-TINYGIF
# ~ BiliBili_去除動態中的話題
URL-REGEX,^https?:\/\/api\.vc\.bilibili\.com\/topic_svr\/v1\/topic_svr,REJECT-TINYGIF
# ~ BiliBili_可能的一些推廣(beta)
URL-REGEX,^https?:\/\/api\.bilibili\.com\/pgc\/season\/app\/related\/recommend\?,REJECT-TINYGIF
# ~ BiliBili_漫畫去廣告
URL-REGEX,^https?:\/\/manga\.bilibili\.com\/twirp\/comic\.v\d\.Comic\/Flash,REJECT-TINYGIF
URL-REGEX,^https?:\/\/manga\.bilibili\.com\/twirp\/comic\.v\d\.Comic\/ListFlash,REJECT-TINYGIF

[URL Rewrite]
# ~ BiliBili_解除SIM卡地區限制
(^https?:\/\/app\.biliintl.com\/intl\/.+)(&sim_code=\d+)(.+) $1$3 302

